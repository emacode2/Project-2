<section class="form-container">
    <h4>New Post</h4>
    <form action="/" method="post" class="post-form">
        <div class="input-field">
            <textarea name="post[content]" cols="30" rows="10" placeholder="Message"></textarea>
        </div>
        <div class="">
            <select name="author" id="author">
                <option value="" disabled selected>Choose the User</option>
                {{#each users}}
                <option value="{{id}}">{{local.email}}</option>
                {{/each}}
            </select>
        </div>
        <div class="input-field">
            <input type="text" value="Post" class="btn">
        </div>
    </form>
</section>